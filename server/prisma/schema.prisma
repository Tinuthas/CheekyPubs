// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Dog {
  id           String       @id @default(uuid())
  name         String
  birthdayDate DateTime?
  gender       String?
  colour       String?
  breed        String
  daysDog      Attendance[]
  vaccines     Vaccine[]
  Owner        Owner        @relation(fields: [ownerId], references: [id])
  ownerId      String

  @@map("dogs")
}

model Owner {
  id           String    @id @default(uuid())
  name         String
  phoneOne     String
  phoneTwo     String?
  emailAddress String    @unique
  address      String?
  dogs         Dog[]
  extracts     Extract[]

  @@map("owners")
}

model Vaccine {
  id          String   @id @default(uuid())
  dateVaccine DateTime
  type        String
  dogId       String
  dog         Dog      @relation(fields: [dogId], references: [id])

  @@map("vaccines")
}

model Day {
  id      String       @id @default(uuid())
  date    DateTime
  dayDogs Attendance[]

  @@unique([date])
  @@map("days")
}

model Attendance {
  id         String  @id @default(uuid())
  fullDay    Boolean
  day_id     String
  dog_id     String
  extract_id String?

  day     Day      @relation(fields: [day_id], references: [id])
  dog     Dog      @relation(fields: [dog_id], references: [id])
  extract Extract?

  @@map("attendances")
}

model Extract {
  id          String    @id @default(uuid())
  value       Decimal
  description String?
  date        DateTime?

  attendanceId String?     @unique
  ownerId      String
  attendance   Attendance? @relation(fields: [attendanceId], references: [id])
  Owner        Owner       @relation(fields: [ownerId], references: [id])

  @@map("extracts")
}
